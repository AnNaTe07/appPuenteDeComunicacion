package com.softannate.apppuentedecomunicacion.ui.main.agenda;

public class AlumnosAdapter extends BaseAdapter {

    private Context context;
    private List<AlumnoDto> alumnos;

    public AlumnosAdapter(Context context, List<AlumnoDto> alumnos) {
        this.context = context;
        this.alumnos = alumnos;
    }

    @Override
    public int getCount() {
        return alumnos.size();
    }

    @Override
    public Object getItem(int position) {
        return alumnos.get(position);
    }

    @Override
    public long getItemId(int position) {
        return position;
    }

    @Override
    public View getView(int position, View convertView, ViewGroup parent) {
        AlumnoDto alumno = alumnos.get(position);
        if (convertView == null) {
            convertView = LayoutInflater.from(context).inflate(R.layout.item_agenda, parent, false);
        }

        TextView nombre = convertView.findViewById(R.id.tvNombreAgenda);
        TextView telefono = convertView.findViewById(R.id.tvTelefono);

        nombre.setText(alumno.getNombre());

        String telefonoTexto = (alumno.getTelefonos() != null && !alumno.getTelefonos().isEmpty())
                ? TextUtils.join("\n", alumno.getTelefonos())
                : "Sin tel√©fono";
        telefono.setText("Tel: " + telefonoTexto);

        return convertView;
    }

    public void actualizarAlumnos(List<AlumnoDto> nuevos) {
        this.alumnos = nuevos;
        notifyDataSetChanged();
    }
}
AlumnosAdapter adapter = new AlumnosAdapter(context, listaAlumnos);
listView.setAdapter(adapter);

