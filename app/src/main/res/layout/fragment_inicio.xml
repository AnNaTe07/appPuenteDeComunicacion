<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.inicio.InicioFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingBottom="48dp">

        <!-- Imagen adaptable -->

        <!-- Título -->
        <ImageView
            android:id="@+id/imageFrente"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/frente"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Escuela Técnica N°37"
            android:textAlignment="center"
            android:textColor="#0F0E0E"
            android:textSize="23sp"
            android:textStyle="bold"
            android:fontFamily="@font/adamina"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/imageFrente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ing. Germán Avé Lallemant"
            android:textAlignment="center"
            android:textColor="#0F0E0E"
            android:textSize="23sp"
            android:textStyle="bold"
            android:fontFamily="@font/adamina"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Teléfono -->
        <TextView
            android:id="@+id/textTelefono"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Teléfono : 4452000 - internos: Dirección (6532) / Regencia (6533) / Secretaria (5735)"
            android:textColor="#0F0E0E"
            android:fontFamily="@font/adamina"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón Llamar -->

        <!-- Botón Ubicación -->
        <TextView
            android:id="@+id/tvLlamada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:drawableLeft="@drawable/telefono"
            android:drawablePadding="16dp"
            android:fontFamily="@font/adamina"
            android:gravity="center_vertical|start"
            android:paddingStart="16dp"
            android:text="Llamar a la escuela"
            android:textColor="#0F0E0E"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textTelefono" />

        <TextView
            android:id="@+id/tvUbicacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/location"
            android:drawablePadding="16dp"
            android:fontFamily="@font/adamina"
            android:gravity="center_vertical|start"
            android:paddingStart="16dp"
            android:text="Ubicación"
            android:textColor="#0F0E0E"
            android:textSize="22sp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvLlamada"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón Facebook -->
        <TextView
            android:id="@+id/tvFacebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/facebook"
            android:drawablePadding="16dp"
            android:fontFamily="@font/adamina"
            android:gravity="center_vertical|start"
            android:paddingStart="16dp"
            android:text="Ir a Facebook"
            android:textColor="#0F0E0E"
            android:textSize="22sp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvUbicacion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
