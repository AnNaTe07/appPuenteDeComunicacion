<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <!-- Fecha visible solo si cambia respecto al mensaje anterior -->
    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="4dp"
        android:text="Fecha"
        android:textColor="@color/colorLupa"
        android:textSize="12sp"
        android:visibility="gone" />

    <!-- Mensaje del docente -->
    <LinearLayout
        android:id="@+id/layoutMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_margin="10dp"
        android:layout_gravity="start"
        android:background="@drawable/leido">

        <TextView
            android:id="@+id/textoMensajeDocente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mensaje enviado por ..."
            android:textSize="14sp"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="etiqueta"
                android:textColor="@color/red"
                android:textSize="12sp"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="16dp">

                <ImageView
                    android:id="@+id/check1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/checks"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/check2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/checks"
                    android:visibility="gone"/>
            </FrameLayout>


            <TextView
                android:id="@+id/horaMensajeDocente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:25"
                android:textColor="@color/colorLupa"
                android:textSize="11sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
