<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <!-- Imagen circular -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgUsuario"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="5dp"
        android:contentDescription="Foto"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CircularImageStyle" />

    <!-- Nombre y mensaje -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombreUsuario"
            style="@style/TituloItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Nombre de usuario" />

        <TextView
            android:id="@+id/nombreAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/EtiquetaItem"
            android:text="Alumno" />

        <TextView
            android:id="@+id/mensajeUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextoItem"
            android:text="mensaje hasta 25 caracteres?"
            android:maxLines="1"
            android:ellipsize="end"/>



        <TextView
            android:id="@+id/categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextoItem"
            android:text="Categoria"
            android:textColor="@color/colorBase"/>

    </LinearLayout>

    <!-- Fecha y badge -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="end|center_vertical">

        <TextView
            android:id="@+id/fechaUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Fecha"
            android:textSize="12sp"
            android:textColor="#999999" />


        <TextView
            android:id="@+id/badgeChat"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:minWidth="19dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:gravity="center"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:background="@drawable/badge"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
