<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppPuenteDeComunicacion" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorBase</item>
        <item name="colorPrimaryVariant">@color/colorBase</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.AppPuenteDeComunicacion.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Cambio el color de fondo de las vistas -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Cambio el color de fondo de la barra de navegaciÃ³n -->
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">
            true
        </item>


    </style>

    <style name="Theme.AppPuenteDeComunicacion.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppPuenteDeComunicacion.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>